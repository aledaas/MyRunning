<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="viewCustom" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="CustomFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/CircularShape</item>
    </style>

    <style name="CircularShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
        <!-- To remove divider of the number picker -->
        <item name="colorControlNormal">@android:color/transparent</item>
        <!--<item name="colorControlNormal">@color/gray_dark</item>-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>
</resources>